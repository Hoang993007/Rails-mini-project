<h2>Review From</h2>
 <%= form_with(model: @album_review, local: true) do |form| %>
   <div class= "field">
     <%= form.text_area :review %>
     <%= form.hidden_field :album_id, :value => @album.id %>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>
 
  <h2>Review List</h2>
