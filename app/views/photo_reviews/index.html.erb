<p id="notice"><%= notice %></p>

<h1>Photo Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Photo</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_reviews.each do |photo_review| %>
      <tr>
        <td><%= photo_review.user_id %></td>
        <td><%= photo_review.photo_id %></td>
        <td><%= photo_review.review %></td>
        <td><%= link_to 'Show', photo_review %></td>
        <td><%= link_to 'Edit', edit_photo_review_path(photo_review) %></td>
        <td><%= link_to 'Destroy', photo_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo Review', new_photo_review_path %>
